{
    "scopeName": "source.rst",
    "patterns": [
        {
            "include": "#body-element"
        }
    ],
    "repository": {
        "body-element": {
            "patterns": [
                {
                    "include": "#section"
                },
                {
                    "include": "#directives"
                },
                {
                    "include": "#comment"
                },
                {
                    "include": "#role"
                }
            ]
        },
        "comment": {
            "begin": "(\\s*)\\.\\.[ ]",
            "end": "^(?!\\1\\s+)(?!\\s*$)",
            "name": "comment.line"
        },
        "directives": {
            "name": "meta.directive.rst",
            "patterns": [
                {
                    "include": "#code-block-directive"
                },
                {
                    "include": "#generic-directive"
                }
            ]
        },
        "code-block-directive": {
            "begin": "(\\s*)\\.\\.\\s+(code-block)::\\s+python",
            "beginCaptures": {
                "2": {
                    "name": "entity.name.type"
                }
            },
            "end": "^(?!\\1\\s+)(?!\\s*$)",
            "name": "code.block.directive",
            "patterns": [
                {
                    "include": "#python-code"
                }
            ]
        },
        "generic-directive": {
            "match": "\\.\\.\\s+(\\w+)::",
            "captures": {
                "1": {
                    "name": "entity.name.type"
                }
            }
        },
        "role": {
            "name": "meta.role.rst",
            "begin": ":(\\w+):`",
            "end": "`",
            "beginCaptures": {
                "1": {
                    "name": "keyword.letter"
                }
            },
            "patterns": [
                {
                    "match": "([^`]+)<(.*)>",
                    "captures": {
                        "1": {
                            "name": "string"
                        },
                        "2": {
                            "name": "entity.name.function"
                        }
                    }
                },
                {
                    "match": "[^`]+",
                    "name": "string"
                }
            ]
        },
        "section": {
            "match": "^[=-]+",
            "name": "keyword.control"
        },
        "python-code": {
            "begin": "(\\s*)",
            "end": "^(?!\\1\\s+)(?!\\s*$)",
            "name": "source.python",
            "patterns": [
                {
                    "include": "source.python"
                }
            ]
        }
    }
}