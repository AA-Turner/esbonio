{
    "scopeName": "source.rst",
    "patterns": [
        {
            "include": "#body-element"
        }
    ],
    "repository": {
        "body-element": {
            "patterns": [
                {
                    "include": "#section"
                },
                {
                    "include": "#field-list"
                },
                {
                    "include": "#directive"
                },
                {
                    "include": "#literal-block"
                },
                {
                    "include": "#link-definition"
                },
                {
                    "include": "#footnote-defintion"
                },
                {
                    "include": "#comment"
                },
                {
                    "include": "#inline-element"
                }
            ]
        },
        "inline-element": {
            "patterns": [
                {
                    "include": "#role"
                },
                {
                    "include": "#bold"
                },
                {
                    "include": "#italic"
                },
                {
                    "include": "#code"
                },
                {
                    "include": "#link-inline"
                },
                {
                    "include": "#link-reference"
                },
                {
                    "include": "#footnote-reference"
                }
            ]
        },
        "section": {
            "match": "^[=^'\"*+~-]+$",
            "name": "keyword.control"
        },
        "comment": {
            "begin": "^(\\s*)\\.\\.[ ]",
            "end": "^(?!\\1\\s+)(?!\\s*$)",
            "name": "comment.line"
        },
        "field-list": {
            "begin": "(\\s*):([\\w-]+):([ ]|$)",
            "beginCaptures": {
                "2": {
                    "name": "storage.modifier"
                }
            },
            "end": "^(?!\\1\\s+)(?!\\s*$)",
            "name": "field.list"
        },
        "directive": {
            "name": "meta.directive.rst",
            "patterns": [
                {
                    "include": "#c-code-block"
                },
                {
                    "include": "#cpp-code-block"
                },
                {
                    "include": "#css-code-block"
                },
                {
                    "include": "#html-code-block"
                },
                {
                    "include": "#js-code-block"
                },
                {
                    "include": "#json-code-block"
                },
                {
                    "include": "#python-code-block"
                },
                {
                    "include": "#ts-code-block"
                },
                {
                    "include": "#yaml-code-block"
                },
                {
                    "include": "#generic-code-block"
                },
                {
                    "include": "#doctest-directive"
                },
                {
                    "include": "#generic-directive"
                }
            ]
        },
        "doctest-directive": {
            "begin": "(\\s*)\\.\\.\\s+(doctest|testcode|testsetup|testcleanup)::",
            "beginCaptures": {
                "2": {
                    "name": "entity.name.function"
                }
            },
            "end": "^(?!\\1\\s+)(?!\\s*$)",
            "name": "meta.directive.doctest.rst",
            "patterns": [
                {
                    "include": "#field-list"
                },
                {
                    "include": "#python-code"
                }
            ]
        },
        "c-code-block": {
            "begin": "(\\s*)\\.\\.\\s+(code-block)::\\s+c$",
            "beginCaptures": {
                "2": {
                    "name": "entity.name.function"
                }
            },
            "end": "^(?!\\1\\s+)(?!\\s*$)",
            "name": "meta.directive.code-block.c.rst",
            "patterns": [
                {
                    "include": "#field-list"
                },
                {
                    "include": "#c-code"
                }
            ]
        },
        "cpp-code-block": {
            "begin": "(\\s*)\\.\\.\\s+(code-block)::\\s+cpp$",
            "beginCaptures": {
                "2": {
                    "name": "entity.name.function"
                }
            },
            "end": "^(?!\\1\\s+)(?!\\s*$)",
            "name": "meta.directive.code-block.cpp.rst",
            "patterns": [
                {
                    "include": "#field-list"
                },
                {
                    "include": "#cpp-code"
                }
            ]
        },
        "css-code-block": {
            "begin": "(\\s*)\\.\\.\\s+(code-block)::\\s+css",
            "beginCaptures": {
                "2": {
                    "name": "entity.name.function"
                }
            },
            "end": "^(?!\\1\\s+)(?!\\s*$)",
            "name": "meta.directive.code-block.css.rst",
            "patterns": [
                {
                    "include": "#field-list"
                },
                {
                    "include": "#css-code"
                }
            ]
        },
        "generic-code-block": {
            "begin": "(\\s*)\\.\\.\\s+(code-block)::",
            "beginCaptures": {
                "2": {
                    "name": "entity.name.function"
                }
            },
            "end": "^(?!\\1\\s+)(?!\\s*$)",
            "name": "meta.directive.code-block.rst",
            "patterns": [
                {
                    "include": "#field-list"
                },
                {
                    "begin": "^(\\s+)",
                    "end": "^(?!\\1\\s+)(?!\\s*$)",
                    "name": "string"
                }
            ]
        },
        "html-code-block": {
            "begin": "(\\s*)\\.\\.\\s+(code-block)::\\s+html",
            "beginCaptures": {
                "2": {
                    "name": "entity.name.function"
                }
            },
            "end": "^(?!\\1\\s+)(?!\\s*$)",
            "name": "meta.directive.code-block.html.rst",
            "patterns": [
                {
                    "include": "#field-list"
                },
                {
                    "include": "#html-code"
                }
            ]
        },
        "js-code-block": {
            "begin": "(\\s*)\\.\\.\\s+(code-block)::\\s+(js|javascript)$",
            "beginCaptures": {
                "2": {
                    "name": "entity.name.function"
                }
            },
            "end": "^(?!\\1\\s+)(?!\\s*$)",
            "name": "meta.directive.code-block.js.rst",
            "patterns": [
                {
                    "include": "#field-list"
                },
                {
                    "include": "#js-code"
                }
            ]
        },
        "json-code-block": {
            "begin": "(\\s*)\\.\\.\\s+(code-block)::\\s+json",
            "beginCaptures": {
                "2": {
                    "name": "entity.name.function"
                }
            },
            "end": "^(?!\\1\\s+)(?!\\s*$)",
            "name": "meta.directive.code-block.json.rst",
            "patterns": [
                {
                    "include": "#field-list"
                },
                {
                    "include": "#json-code"
                }
            ]
        },
        "python-code-block": {
            "begin": "(\\s*)\\.\\.\\s+(code-block)::\\s+python",
            "beginCaptures": {
                "2": {
                    "name": "entity.name.function"
                }
            },
            "end": "^(?!\\1\\s+)(?!\\s*$)",
            "name": "meta.directive.code-block.python.rst",
            "patterns": [
                {
                    "include": "#field-list"
                },
                {
                    "include": "#python-code"
                }
            ]
        },
        "ts-code-block": {
            "begin": "(\\s*)\\.\\.\\s+(code-block)::\\s+(ts|typescript)$",
            "beginCaptures": {
                "2": {
                    "name": "entity.name.function"
                }
            },
            "end": "^(?!\\1\\s+)(?!\\s*$)",
            "name": "meta.directive.code-block.ts.rst",
            "patterns": [
                {
                    "include": "#field-list"
                },
                {
                    "include": "#ts-code"
                }
            ]
        },
        "yaml-code-block": {
            "begin": "(\\s*)\\.\\.\\s+(code-block)::\\s+yaml",
            "beginCaptures": {
                "2": {
                    "name": "entity.name.function"
                }
            },
            "end": "^(?!\\1\\s+)(?!\\s*$)",
            "name": "meta.directive.code-block.yaml.rst",
            "patterns": [
                {
                    "include": "#field-list"
                },
                {
                    "include": "#yaml-code"
                }
            ]
        },
        "generic-directive": {
            "begin": "(\\s*)\\.\\.\\s+(([\\w]+):)?([\\w-]+)::.*",
            "beginCaptures": {
                "3": {
                    "name": "storage.type.namespace"
                },
                "4": {
                    "name": "entity.name.function"
                }
            },
            "end": "^(?!\\1\\s+)(?!\\s*$)",
            "name": "meta.directive.generic.rst",
            "patterns": [
                {
                    "include": "#body-element"
                }
            ]
        },
        "literal-block": {
            "begin": "^(\\s*).*::$",
            "end": "^(?!\\1\\s+)(?!\\s*$)",
            "name": "meta.literal-block.rst",
            "patterns": [
                {
                    "begin": "^(\\s+)",
                    "end": "^(?!\\1\\s+)(?!\\s*$)",
                    "name": "string"
                }
            ]
        },
        "role": {
            "name": "meta.role.rst",
            "begin": ":(([\\w]+):)?([\\w-]+):`",
            "end": "`",
            "beginCaptures": {
                "2": {
                    "name": "storage.type.namespace"
                },
                "3": {
                    "name": "entity.name.function"
                }
            },
            "patterns": [
                {
                    "match": "([^`]+)(<.*>)",
                    "captures": {
                        "1": {
                            "name": "string"
                        },
                        "2": {
                            "name": "support.constant"
                        }
                    }
                },
                {
                    "match": "[^`]+",
                    "name": "support.constant"
                }
            ]
        },
        "bold": {
            "match": "\\*\\*(?! ).*?(?<! )\\*\\*",
            "name": "markup.bold"
        },
        "italic": {
            "match": "\\*(?! ).*?(?<! )\\*",
            "name": "markup.italic"
        },
        "code": {
            "match": "``(?! ).*?(?<! )``",
            "name": "string"
        },
        "footnote-defintion": {
            "name": "meta.definition.footnote.rst",
            "begin": "(\\s*)\\.\\.\\s+(\\[)((#[-\\w\\d_]+)|\\d+)(\\])\\s",
            "beginCaptures": {
                "2": {
                    "name": "keyword.operator"
                },
                "3": {
                    "name": "variable.other.label"
                },
                "5": {
                    "name": "keyword.operator"
                }
            },
            "patterns": [
                {
                    "include": "#body-element"
                }
            ],
            "end": "^(?!\\1\\s+)(?!\\s*$)"
        },
        "footnote-reference": {
            "name": "meta.reference.footnote.rst",
            "match": "(\\[)(#?([-\\w\\d_]+)?)(\\]_)",
            "captures": {
                "1": {
                    "name": "keyword.operator"
                },
                "2": {
                    "name": "variable.other.label"
                },
                "4": {
                    "name": "keyword.operator"
                }
            }
        },
        "link-definition": {
            "match": "(\\.\\.\\s+_)(.*)(:)\\s+(.*)$",
            "name": "meta.definition.link.rst",
            "captures": {
                "1": {
                    "name": "keyword.operator"
                },
                "2": {
                    "name": "variable.other.label"
                },
                "3": {
                    "name": "keyword.operator"
                },
                "4": {
                    "name": "constant.other.url"
                }
            }
        },
        "link-inline": {
            "match": "(`.+?(<.*?>)`)(_)",
            "name": "meta.link.rst",
            "captures": {
                "1": {
                    "name": "string"
                },
                "2": {
                    "name": "constant.other.url"
                },
                "3": {
                    "name": "keyword.operator"
                }
            }
        },
        "link-reference": {
            "match": "(`.+?`)(_)",
            "name": "meta.reference.link.rst",
            "captures": {
                "1": {
                    "name": "variable.other.label"
                },
                "2": {
                    "name": "keyword.operator"
                }
            }
        },
        "c-code": {
            "begin": "(\\s*)",
            "end": "^(?!\\1\\s+)(?!\\s*$)",
            "name": "source.c",
            "patterns": [
                {
                    "include": "source.c"
                }
            ]
        },
        "cpp-code": {
            "begin": "(\\s*)",
            "end": "^(?!\\1\\s+)(?!\\s*$)",
            "name": "source.cpp",
            "patterns": [
                {
                    "include": "source.cpp"
                }
            ]
        },
        "css-code": {
            "begin": "(\\s*)",
            "end": "^(?!\\1\\s+)(?!\\s*$)",
            "name": "source.css",
            "patterns": [
                {
                    "include": "source.css"
                }
            ]
        },
        "html-code": {
            "begin": "(\\s*)",
            "end": "^(?!\\1\\s+)(?!\\s*$)",
            "name": "text.html.derivative",
            "patterns": [
                {
                    "include": "text.html.derivative"
                }
            ]
        },
        "js-code": {
            "begin": "(\\s*)",
            "end": "^(?!\\1\\s+)(?!\\s*$)",
            "name": "source.js",
            "patterns": [
                {
                    "include": "source.js"
                }
            ]
        },
        "json-code": {
            "begin": "(\\s*)",
            "end": "^(?!\\1\\s+)(?!\\s*$)",
            "name": "source.json",
            "patterns": [
                {
                    "include": "source.json"
                }
            ]
        },
        "python-code": {
            "begin": "(\\s*)",
            "end": "^(?!\\1\\s+)(?!\\s*$)",
            "name": "source.python",
            "patterns": [
                {
                    "include": "source.python"
                }
            ]
        },
        "ts-code": {
            "begin": "(\\s*)",
            "end": "^(?!\\1\\s+)(?!\\s*$)",
            "name": "source.ts",
            "patterns": [
                {
                    "include": "source.ts"
                }
            ]
        },
        "yaml-code": {
            "begin": "(\\s*)",
            "end": "^(?!\\1\\s+)(?!\\s*$)",
            "name": "source.yaml",
            "patterns": [
                {
                    "include": "source.yaml"
                }
            ]
        }
    }
}
