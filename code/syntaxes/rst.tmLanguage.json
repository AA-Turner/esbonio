{
    "scopeName": "source.rst",
    "patterns": [
        {
            "include": "#body-element"
        }
    ],
    "repository": {
        "body-element": {
            "patterns": [
                {
                    "include": "#section"
                },
                {
                    "include": "#field-list"
                },
                {
                    "include": "#directive"
                },
                {
                    "include": "#comment"
                },
                {
                    "include": "#inline-element"
                }
            ]
        },
        "inline-element": {
            "patterns": [
                {
                    "include": "#role"
                },
                {
                    "include": "#bold"
                },
                {
                    "include": "#italic"
                }
            ]
        },
        "section": {
            "match": "^[=-]+",
            "name": "keyword.control"
        },
        "comment": {
            "begin": "(\\s*)\\.\\.[ ]",
            "end": "^(?!\\1\\s+)(?!\\s*$)",
            "name": "comment.line"
        },
        "field-list": {
            "begin": "(\\s*):([\\w-]+):[ ]?",
            "beginCaptures": {
                "2": {
                    "name": "entity.name.type"
                }
            },
            "end": "^(?!\\1\\s+)(?!\\s*$)",
            "name": "field.list"
        },
        "directive": {
            "name": "meta.directive.rst",
            "patterns": [
                {
                    "include": "#python-code-block"
                },
                {
                    "include": "#generic-directive"
                }
            ]
        },
        "python-code-block": {
            "begin": "(\\s*)\\.\\.\\s+(code-block)::\\s+python",
            "beginCaptures": {
                "2": {
                    "name": "entity.name.type"
                }
            },
            "end": "^(?!\\1\\s+)(?!\\s*$)",
            "name": "code.block.directive",
            "patterns": [
                {
                    "include": "#python-code"
                }
            ]
        },
        "generic-directive": {
            "begin": "(\\s*)\\.\\.\\s+([\\w-]+)::.*",
            "beginCaptures": {
                "2": {
                    "name": "entity.name.type"
                }
            },
            "end": "^(?!\\1\\s+)(?!\\s*$)",
            "name": "block.directive",
            "patterns": [
                {
                    "include": "#body-element"
                }
            ]
        },
        "role": {
            "name": "meta.role.rst",
            "begin": ":([\\w-]+):`",
            "end": "`",
            "beginCaptures": {
                "1": {
                    "name": "keyword.letter"
                }
            },
            "patterns": [
                {
                    "match": "([^`]+)<(.*)>",
                    "captures": {
                        "1": {
                            "name": "string"
                        },
                        "2": {
                            "name": "entity.name.function"
                        }
                    }
                },
                {
                    "match": "[^`]+",
                    "name": "string"
                }
            ]
        },
        "bold": {
            "match": "\\*\\*.*\\*\\*",
            "name": "markup.bold"
        },
        "italic": {
            "match": "\\*.*\\*",
            "name": "markup.italic"
        },
        "python-code": {
            "begin": "(\\s*)",
            "end": "^(?!\\1\\s+)(?!\\s*$)",
            "name": "source.python",
            "patterns": [
                {
                    "include": "source.python"
                }
            ]
        }
    }
}